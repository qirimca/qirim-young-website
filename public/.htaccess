# Enhanced Security Headers for QIRI'M YOUNG
Header always set X-Content-Type-Options "nosniff"
Header always set X-Frame-Options "SAMEORIGIN"
Header always set Referrer-Policy "strict-origin-when-cross-origin"
Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
Header always set Cross-Origin-Opener-Policy "same-origin"
Header always set Permissions-Policy "camera=(), microphone=(), geolocation=(), interest-cohort=()"

# Enhanced Content Security Policy with Crowdin and Analytics
Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://proxy-translator.app.crowdin.net https://cdn.crowdin.com https://qirimyoung.crowdin.com https://distributions.crowdin.net; connect-src 'self' https://www.google-analytics.com https://analytics.google.com https://distributions.crowdin.net https://proxy-translator.app.crowdin.net https://qirimyoung.crowdin.com https://api.crowdin.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdn.crowdin.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-src https://qirimyoung.crowdin.com; base-uri 'self'; form-action 'self';"

# MIME Types for fonts
AddType font/woff2 .woff2
AddType font/woff .woff
AddType font/otf .otf

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE font/otf
    AddOutputFilterByType DEFLATE font/woff
    AddOutputFilterByType DEFLATE font/woff2
</IfModule>

# Optimized Browser Caching for Performance (157KB TTL improvement)
<IfModule mod_expires.c>
    ExpiresActive on
    
    # Long-term caching for static assets (immutable content)
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # Medium-term caching for versioned assets
    ExpiresByType text/css "access plus 6 months"
    ExpiresByType application/javascript "access plus 6 months"
    
    # Short-term caching for dynamic content
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 1 hour"
    ExpiresByType application/xml "access plus 1 week"
    ExpiresByType text/xml "access plus 1 week"
    
    # Manifest files
    ExpiresByType application/manifest+json "access plus 1 week"
</IfModule>

# Alternative cache control headers with performance optimization
<IfModule mod_headers.c>
    # Immutable assets with 1-year cache
    <FilesMatch "\.(woff2|woff|png|webp|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Versioned assets with 6-month cache
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "max-age=15552000, public"
    </FilesMatch>
    
    # Dynamic content with revalidation
    <FilesMatch "\.(html)$">
        Header set Cache-Control "max-age=3600, public, must-revalidate"
    </FilesMatch>
    
    # API and data files
    <FilesMatch "\.(json|xml)$">
        Header set Cache-Control "max-age=3600, public"
    </FilesMatch>
</IfModule>

# SPA Routing
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html$ - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>