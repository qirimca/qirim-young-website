{
  "name": "qirim-young-website",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "description": "QIRI'M YOUNG - Qırımtatar medeniıetni dijital saqlaw. Crimean Tatar digital heritage preservation organization website.",
  "keywords": [
    "crimean-tatar",
    "qirimtatar",
    "digital-heritage",
    "nonprofit",
    "language-preservation",
    "cultural-preservation"
  ],
  "author": "QIRI'M YOUNG <info@qirimca.org>",
  "homepage": "https://young.qirimtatarca.org",
  "repository": {
    "type": "git",
    "url": "https://github.com/qirimca/qirim-young-website.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run sitemap && npm run build:css && vite build && npm run build:cleanup",
    "build:cleanup": "node -e \"const fs = require('fs'); const path = require('path'); const distFonts = path.join(__dirname, 'dist/fonts'); if (fs.existsSync(distFonts)) { fs.readdirSync(distFonts).filter(f => f.endsWith('.otf')).forEach(f => fs.unlinkSync(path.join(distFonts, f))); console.log('Legacy OTF fonts removed - WOFF2 only for 95.9% browser support'); }\"",
    "build:css": "postcss ./src/tailwind.css -o ./public/style.css",
    "sitemap": "node scripts/generate-sitemap.js",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "deploy": "npm run build && gh-pages -d dist",
    "seo": "npm run sitemap && echo 'SEO files updated: sitemap.xml, robots.txt'"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "framer-motion": "^12.23.12",
    "i18next": "^25.3.6",
    "i18next-browser-languagedetector": "^8.2.0",
    "lucide-react": "^0.537.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.8.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-constant-elements": "^7.27.1",
    "@babel/plugin-transform-react-inline-elements": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "gh-pages": "^6.3.0",
    "globals": "^16.3.0",
    "postcss-cli": "^11.0.0",
    "terser": "^5.43.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  }
}
